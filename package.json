{
  "name": "zettelkasten-starter",
  "version": "1.0.0",
  "description": "An ultimately simple CLI tool and library for zettelkasten beginners",
  "main": "index.js",
  "bin": {
    "create-zettelkasten": "bin/create-zettelkasten.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "zettelkasten",
    "note-taking",
    "knowledge-management",
    "pkm",
    "markdown",
    "cli"
  ],
  "author": "Enokisan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enokisan/zettelkasten-starter.git"
  },
  "homepage": "https://github.com/Enokisan/zettelkasten-starter#readme",
  "bugs": {
    "url": "https://github.com/Enokisan/zettelkasten-starter/issues"
  },
  "dependencies": {
    "commander": "^9.5.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
